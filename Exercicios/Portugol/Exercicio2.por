programa {
  funcao inicio() {
    /* 
    Soma simples: Receba dois números inteiros e exiba o resultado da soma entre eles.
    */

    inteiro numero1, numero2, soma
    escreva("Digite o primeiro número:\n")
    leia(numero1)
    escreva("Digite o segundo número:\n")
    leia(numero2)
    soma = numero1 + numero2
    escreva("A soma de " + numero1 + " com " + numero2 +" é " + soma) 
  }
}
